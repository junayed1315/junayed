<script>
const noBtn = document.getElementById("noBtn");
const yesBtn = document.getElementById("yesBtn");
const message = document.getElementById("message");
const hint = document.getElementById("hint");

let noTexts = [
  "No",
  "Are you sure?",
  "Think again üòè",
  "Last chance!",
  "You can't escape üòà"
];

let noCount = 0;
let yesScale = 1;

// Move No button + prank
function moveNoButton() {
  const x = Math.random() * (window.innerWidth - noBtn.offsetWidth);
  const y = Math.random() * (window.innerHeight - noBtn.offsetHeight);

  noBtn.style.left = x + "px";
  noBtn.style.top = y + "px";

  noBtn.innerText = noTexts[noCount % noTexts.length];
  noCount++;

  yesScale += 0.12;
  yesBtn.style.transform = `scale(${yesScale})`;

  // Screen shake
  document.body.classList.add("shake");
  setTimeout(() => document.body.classList.remove("shake"), 300);

  // Toast prank
  const toast = document.createElement("div");
  toast.className = "toast";
  toast.innerText = "üòà Nope! Try again";
  document.body.appendChild(toast);
  setTimeout(() => toast.remove(), 900);

  // Ultimate prank
  if (noCount === 5) {
    noBtn.innerText = "Yes üòè";
    noBtn.style.background = "#2ecc71";
  }
}

noBtn.addEventListener("mouseenter", moveNoButton);
noBtn.addEventListener("click", moveNoButton);

// Yes clicked
yesBtn.addEventListener("click", () => {
  yesBtn.style.display = "none";
  noBtn.style.display = "none";
  message.style.display = "block";
  hint.style.display = "block";

  setTimeout(() => {
    window.location.href =
      "https://wa.me/?text=I%20said%20YES%20to%20Junayed%20üíñüòç";
  }, 2200);
});

// Floating hearts
function createHeart() {
  const heart = document.createElement("div");
  heart.classList.add("heart");
  heart.innerHTML = "‚ù§Ô∏è";
  heart.style.left = Math.random() * window.innerWidth + "px";
  heart.style.fontSize = (Math.random() * 22 + 12) + "px";
  document.body.appendChild(heart);
  setTimeout(() => heart.remove(), 6000);
}

setInterval(createHeart, 280);
</script>

